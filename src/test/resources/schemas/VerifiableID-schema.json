{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "credentialSchema": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "type"
      ]
    },
    "credentialStatus": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "type"
      ]
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "currentAddress": {
          "type": "string"
        },
        "dateOfBirth": {
          "type": "string",
          "format": "date-time"
        },
        "familyName": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "nameAndFamilyNameAtBirth": {
          "type": "string"
        },
        "personalIdentifier": {
          "type": "string"
        },
        "placeOfBirth": {
          "type": "string"
        }
      },
      "required": [
        "dateOfBirth",
        "familyName",
        "firstName",
        "id",
        "personalIdentifier"
      ]
    },
    "evidence": {
      "type": "object",
      "properties": {
        "documentPresence": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "evidenceDocument": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "id": {
          "type": "string"
        },
        "subjectPresence": {
          "type": "string"
        },
        "type": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "verifier": {
          "type": "string"
        }
      },
      "required": [
        "documentPresence",
        "evidenceDocument",
        "id",
        "subjectPresence",
        "type",
        "verifier"
      ]
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "id": {
      "type": "string"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "issuer": {
      "type": "string"
    },
    "proof": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string"
        },
        "creator": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        },
        "jws": {
          "type": "string"
        },
        "nonce": {
          "type": "string"
        },
        "proofPurpose": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "verificationMethod": {
          "type": "string"
        }
      },
      "required": [
        "created",
        "creator",
        "domain",
        "jws",
        "nonce",
        "proofPurpose",
        "type",
        "verificationMethod"
      ]
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "validFrom": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "@context",
    "credentialSchema",
    "credentialStatus",
    "credentialSubject",
    "evidence",
    "id",
    "issuanceDate",
    "issuer",
    "proof",
    "type",
    "validFrom"
  ],
  "title": "EBSI Natural Person Verifiable ID",
  "description": "Schema of an EBSI Verifiable ID for a natural person"
}